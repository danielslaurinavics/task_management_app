<div class="modal modal-fade" id="<%= modal %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <p id="<%= modal %>-body-text"><%= modal_text %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="<%= confirmButtonId %>"><%= __('ui.yes') %></button>
        <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal"><%= __('ui.no') %></button>
      </div>
    </div>
  </div>
</div>